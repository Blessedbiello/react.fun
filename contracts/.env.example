# Somnia Network Configuration
# Copy this file to .env and fill in your values

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Somnia Network RPC URLs
SOMNIA_TESTNET_RPC_URL=https://dream-rpc.somnia.network
SOMNIA_MAINNET_RPC_URL=https://rpc.somnia.network

# Somnia WebSocket URLs
SOMNIA_TESTNET_WS_URL=wss://dream-rpc.somnia.network/ws
SOMNIA_MAINNET_WS_URL=wss://rpc.somnia.network/ws

# Somnia DEX Contract Addresses (Testnet)
SOMNIA_TESTNET_ROUTER=0x1234567890123456789012345678901234567890
SOMNIA_TESTNET_FACTORY=0x1234567890123456789012345678901234567891
SOMNIA_TESTNET_WETH=0x1234567890123456789012345678901234567892

# Somnia DEX Contract Addresses (Mainnet)
SOMNIA_MAINNET_ROUTER=0x0000000000000000000000000000000000000000
SOMNIA_MAINNET_FACTORY=0x0000000000000000000000000000000000000000
SOMNIA_MAINNET_WETH=0x0000000000000000000000000000000000000000

# API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key
INFURA_API_KEY=your_infura_api_key

# Deployment Configuration
DEPLOY_VERIFY_CONTRACTS=true
DEPLOY_GAS_LIMIT=8000000
DEPLOY_GAS_PRICE=20000000000

# Platform Configuration
PLATFORM_FEE_BPS=100
CREATION_FEE_ETH=0.001
RATE_LIMIT_SECONDS=1

# Frontend Configuration
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_DEFAULT_NETWORK=somnia-testnet
NEXT_PUBLIC_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/spawn-fun/somnia

# Analytics and Monitoring
ENABLE_ANALYTICS=true
ANALYTICS_API_KEY=your_analytics_key
SENTRY_DSN=your_sentry_dsn

# Database (for analytics/monitoring)
DATABASE_URL=postgresql://username:password@localhost:5432/spawn_fun
REDIS_URL=redis://localhost:6379